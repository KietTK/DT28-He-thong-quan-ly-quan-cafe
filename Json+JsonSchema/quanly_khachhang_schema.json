{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QuanLyKhachHang",
  "type": "object",
  "properties": {
    "khachhang": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "khachhang_id": { "type": "string", "maxLength": 10 },
          "hoten": { "type": "string" },
          "sodienthoai": { "type": "string", "pattern": "^0[0-9]{9}$" },
          "diachi": { "type": "string" }
        },
        "required": ["khachhang_id", "hoten", "sodienthoai"]
      }
    }
  }
}
