{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QuanLyNhanVienPhanCong",
  "type": "object",
  "properties": {
    "nhanvien": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "nhanvien_id": { "type": "string", "maxLength": 10 },
          "hoten": { "type": "string" },
          "chucvu": {
            "type": "string",
            "enum": [
              "Phục vụ",
              "Thu ngân",
              "Pha chế",
              "Phụ bếp",
              "Quản lý",
              "Bảo vệ"
            ]
          },
          "luong": { "type": "number", "minimum": 1000000 },
          "phancong": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "ca_id": { "type": "string", "maxLength": 10 },
                "ngaylam": {
                  "type": "string",
                  "format": "date",
                  "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
                }
              },
              "required": ["ca_id", "ngaylam"]
            }
          }
        },
        "required": ["nhanvien_id", "hoten", "chucvu", "luong"]
      }
    },
    "calamviec": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "ca_id": { "type": "string", "maxLength": 10 },
          "tenca": { "type": "string", "enum": ["Sáng", "Chiều", "Tối"] },
          "thoigianbatdau": {
            "type": "string",
            "pattern": "^[0-9]{2}:[0-9]{2}:[0-9]{2}$"
          },
          "thoigianketthuc": {
            "type": "string",
            "pattern": "^[0-9]{2}:[0-9]{2}:[0-9]{2}$"
          }
        },
        "required": ["ca_id", "tenca", "thoigianbatdau", "thoigianketthuc"]
      }
    }
  },
  "required": ["nhanvien", "calamviec"]
}
