{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HoaDonThanhToan",
  "type": "object",
  "properties": {
    "hoadon": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "hoadon_id": { "type": "string", "maxLength": 10 },
          "donhang_id": { "type": "string", "maxLength": 10 },
          "ngaylap": {
            "type": "string",
            "format": "date",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
          },
          "phuongthucthanhtoan": {
            "type": "string",
            "enum": ["Chuyển khoản", "Tiền mặt"]
          }
        },
        "required": [
          "hoadon_id",
          "donhang_id",
          "ngaylap",
          "phuongthucthanhtoan"
        ]
      }
    }
  },
  "required": ["hoadon"]
}
